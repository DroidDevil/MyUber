<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    </style>

    <style name="None"/>

    <style name="Widget.MyUber.Form.HeaderFrame" parent="None">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@drawable/form_header_bg</item>
    </style>

    <style name="Widget.MyUber.Form.HeaderFrame.Text">
        <item name="android:textColor">#939393</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.MyUber.Form.HeaderFrame.Text.Light">
        <item name="android:textColor">#bebebe</item>
    </style>

    <style name="Widget.MyUber.Form.HeaderText" parent="Widget.MyUber.Form.HeaderFrame.Text">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.MyUber.Form.HeaderText.Sub">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.MyUber.Form.RowWidget" parent="None">
        <item name="android:minHeight">26dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Widget.MyUber.Form.RowTitle" parent="Widget.MyUber.Form.RowWidget">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">#939393</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
